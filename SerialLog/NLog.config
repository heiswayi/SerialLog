<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="logDirectory" value="${basedir}/logs" />
  <variable name="logFilename" value="${date:format=yyyy-MM-dd}.log" />
  <variable name="logLayout" value="${longdate} [${uppercase:${level}}] ${callsite} :: ${message}" />

  <targets async="true">
    <target xsi:type="File" name="f" fileName="${logDirectory}/${logFilename}"
            layout="${logLayout}" encoding="utf-8" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="f" />
  </rules>
</nlog>